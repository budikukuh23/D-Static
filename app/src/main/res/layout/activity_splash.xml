<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    android:gravity="center"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splashImage"
        android:scaleType="centerCrop"
        android:src="@drawable/d_static_icon"
        android:layout_width="187.5dp"
        android:layout_height="171.25dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/splashImage"
        android:fontFamily="@font/elephant"
        android:textSize="30dp"
        android:text="D-STATIC"
        android:textColor="@color/white"
        android:id="@+id/teks1"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks1"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/segoe_ui"
        android:text="Distributing Station Component"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

</LinearLayout>