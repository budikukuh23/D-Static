<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_backapps"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/teks1"
            android:textSize="24sp"
            android:text="D-STATIC"
            android:textColor="@color/white"
            android:fontFamily="@font/elephant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/teks1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Distributing Station Component"
            android:fontFamily="@font/segoe_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="64dp"
            android:layout_height="58.44dp"
            android:src="@drawable/d_static_icon" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingTop="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="false"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:elevation="6dp"
                    app:cardMaxElevation="6dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/daftar_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/list_80px"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="Daftar"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/scan_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/qr_code_80px"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="Scan"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/video_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/video_playlist_80px3"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="Video"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/fms_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/printer_80px"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="MPS"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tentang_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/info_80px"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="Tentang"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/keluar_btn"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardBackgroundColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/exit_80px2"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"/>

                                <TextView
                                    android:text="Keluar"
                                    android:textColor="@color/blue"
                                    android:fontFamily="@font/montserrat"
                                    android:textSize="16dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </GridLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <com.synnapps.carouselview.CarouselView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:pageColor="#00000000"
                    app:fillColor="@color/blue"
                    app:slideInterval="4000"
                    app:radius="4dp"
                    app:strokeColor="@color/blue"
                    app:strokeWidth="1dp"
                    android:id="@+id/carousel1"/>

            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="3dp"
                    android:id="@+id/downloadFile"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_baseline_picture_as_pdf_24"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/segoe_ui"
                            android:textColor="@color/black"
                            android:text="Download Buku Panduan dan Daftar QR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconApk"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoe_ui"
                            android:text="D-Static v "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/versiApk2"
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoe_ui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="32dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Developed by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="32dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/segoe_ui"
                        android:text="Muhhamad Kukuh Budi Martono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>