<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuTentangActivity">

    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/backBtn"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparan"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:src="@drawable/left_50px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backBtn"
            android:text="D-Static"
            android:textStyle="bold"
            android:fontFamily="@font/segoe_ui"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="64dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageinfo1"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="normal"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="D-Static adalah Aplikasi Pengenalan Komponen pada Distributing Station yang dibuat untuk membantu mahasiswa pada pembelajaran mata kuliah Praktik Sistem Manufaktur Fleksibel."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                    android:background="@color/transparan"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageinfo2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/blue"
                        android:text="Memperdayakan mahasiswa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Saat pandemi, D-Static diharapkan dapat mendorong mahasiswa untuk dapat bertahan, bangkit, dan mengembangkan ilmu pengetahuannya melalui adopsi digital."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/transparan"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageinfo3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:textSize="18dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/blue"
                        android:text="Kemudahan dalam belajar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:text="Kemudahan dalam belajar merupakan alasan utama dibuatnya aplikasi ini."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="64dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="13dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Muhhamad Kukuh Budi Martono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/versiapk"
                android:textSize="13dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16dp"
                android:fontFamily="@font/segoe_ui"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Connect me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <GridLayout
                android:layout_marginTop="16dp"
                android:rowCount="5"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/myinstagram"
                    android:padding="5dp"
                    android:src="@drawable/instagram_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/mytwitter"
                    android:padding="5dp"
                    android:src="@drawable/twitter_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/myyoutube"
                    android:padding="5dp"
                    android:src="@drawable/youtube_button_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/mylinkedin"
                    android:padding="5dp"
                    android:src="@drawable/linkedin_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/mygithub"
                    android:padding="5dp"
                    android:src="@drawable/github_50px"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </GridLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>